<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_card_height"
        android:layout_margin="@dimen/margin_medium1"
        app:cardBackgroundColor="@color/colorgreen"
        app:cardCornerRadius="@dimen/margin_medium">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_medi_frag_series_all_topics_itemsone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crown"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_large"/>
            <TextView
                android:id="@+id/tv_medi_frag_series_all_topics_recyc_items_upper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basics"
                android:layout_toRightOf="@+id/iv_medi_frag_series_all_topics_itemsone"
                android:layout_marginTop="@dimen/margin_large1"
                android:layout_marginLeft="@dimen/margin_large" />
            <TextView
                android:id="@+id/tv_medi_frag_series_all_topics_recyc_items_lower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basics"
                android:layout_toRightOf="@+id/iv_medi_frag_series_all_topics_itemsone"
                android:layout_below="@+id/tv_medi_frag_series_all_topics_recyc_items_upper"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_large" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>